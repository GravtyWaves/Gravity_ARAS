# ARAS Microservice Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost/aras_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Server Configuration
PORT=8000
DEBUG=true
SERVER_HOST=http://localhost

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Allowed Hosts
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# NLP Configuration
SPACY_MODEL=en_core_web_sm
HAZM_MODEL=hazm

# News Sources (comma-separated URLs)
NEWS_SOURCES=https://rss.cnn.com/rss/edition.rss,https://feeds.bbci.co.uk/news/rss.xml

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_TREND_DETECTION=true
ENABLE_SENTIMENT_ANALYSIS=true

# Database Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Cache TTL
REDIS_CACHE_TTL=3600